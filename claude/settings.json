{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 60,
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(gh:*)",

      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Bash(mkdir:*)",
      "Bash(pwd:*)",
      "Bash(cd:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(jq:*)",
      "Bash(echo:*)",
      "Bash(sed:*)",
      "Bash(xargs:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(curl:*)",

      "Bash(ruby:*)",
      "Bash(node:*)",

      "Bash(gem:*)",
      "Bash(yarn:*)",
      "Bash(npm:*)",

      "Bash(docker compose exec:*)",
      "Bash(docker compose run:*)",

      "Read(~/m/**)",
      "Edit(~/m/**)",
      "Edit(~/p/**)",
      "List(**)",

      "WebFetch",
      "WebSearch",
      "Fetch",

      "mcp__notion__notion-fetch",
      "mcp__notion__notion-search",
      "mcp__notion__get-comments",
      "mcp__notion__create-comment",
      "mcp__notion__notion-update-page"
    ],
    "deny": [
      "Bash(sudo:*)"
    ],
    "ask": []
  }
}
