{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 60,
  "permissions": {
    "allow": [
      "Task",
      "Skill",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Bash(mkdir:*)",
      "Bash(pwd:*)",
      "Bash(cd:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(jq:*)",
      "Bash(echo:*)",
      "Bash(sed:*)",
      "Bash(awk:*)",
      "Bash(xargs:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(curl:*)",
      "Bash(ruby:*)",
      "Bash(node:*)",
      "Bash(gem:*)",
      "Bash(yarn:*)",
      "Bash(npm:*)",
      "Bash(docker compose exec:*)",
      "Bash(docker compose run:*)",
      "Read(~/m/**)",
      "Edit(~/m/**)",
      "Edit(~/p/**)",
      "List(**)",
      "WebFetch",
      "WebSearch",
      "Fetch",
      "mcp__notion__notion-fetch",
      "mcp__notion__notion-search",
      "mcp__notion__get-comments",
      "mcp__notion__create-comment",
      "mcp__notion-query-data-sources",
      "mcp__notion__notion-update-page",
      "mcp__playwright__browser_close",
      "mcp__playwright__browser_resize",
      "mcp__playwright__browser_console_messages",
      "mcp__playwright__browser_handle_dialog",
      "mcp__playwright__browser_file_upload",
      "mcp__playwright__browser_fill_form",
      "mcp__playwright__browser_press_key",
      "mcp__playwright__browser_type",
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_navigate_back",
      "mcp__playwright__browser_network_requests",
      "mcp__playwright__browser_take_screenshot",
      "mcp__playwright__browser_snapshot",
      "mcp__playwright__browser_click",
      "mcp__playwright__browser_drag",
      "mcp__playwright__browser_hover",
      "mcp__playwright__browser_select_option",
      "mcp__playwright__browser_tabs",
      "mcp__playwright__browser_wait_for",
      "mcp__circleci-mcp-server__get_build_failure_logs",
      "mcp__circleci-mcp-server__find_flaky_tests",
      "mcp__circleci-mcp-server__get_latest_pipeline_status",
      "mcp__circleci-mcp-server__get_job_test_results",
      "mcp__circleci-mcp-server__config_helper",
      "mcp__circleci-mcp-server__create_prompt_template",
      "mcp__circleci-mcp-server__recommend_prompt_template_tests",
      "mcp__circleci-mcp-server__list_followed_projects"
    ],
    "deny": [
      "Bash(sudo:*)"
    ],
    "ask": []
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "notification \"$(basename $PWD)\n$(git branch --show-current)\" ClaudeCode"
          }
        ]
      }
    ]
  }
}
