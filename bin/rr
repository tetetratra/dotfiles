# end

require 'date'
require 'json'

_ = ' '

class Enumerator
  def w(&b)
    self.each { |e| e.instance_eval(&b) }
  end
end

cmd = ARGV[0]
lines = STDIN.tty? ? [''] : STDIN.read.lines
out = lines.map do |line|
  line.instance_eval(cmd)
end

if fold = ARGV[1]
  puts out.instance_eval(fold)
else
  puts out
end

