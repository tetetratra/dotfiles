#! /usr/bin/ruby

$time_now = Time.now
def buttery_tmux
  rest = `pmset -g rawbatt`.scan(/(?<=Charging; )\d+/)[0].to_i
  '#[bg=colour22] ' + rest.to_s + '% #[default]'
end

def date
  $time_now.strftime("#[bg=colour23] %m/%-d #[default] #[bg=colour24] %H:%M:%S #[default]")
end

puts [buttery_tmux, date].join(' ')
